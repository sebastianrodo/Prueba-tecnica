        <%= render partial: 'combo_box', locals: { parameter: :header1 } %>
      </div>
      <div class="col">
        <label for="csvFileInput">Column 2</label>
        <%= render partial: 'combo_box', locals: { parameter: :header2} %>
      </div>
      <div class="col">
        <label for="csvFileInput">Column 3</label>
        <%= render partial: 'combo_box', locals: { parameter: :header3 } %>
      </div>
      <div class="col">
        <label for="csvFileInput">Column 4</label>
        <%= render partial: 'combo_box', locals: { parameter: :header4 } %>
      </div>
      <div class="col">
        <label for="csvFileInput">Column 5</label>
        <%= render partial: 'combo_box', locals: { parameter: :header5 } %>
      </div>
      <div class="col">
        <label for="csvFileInput">Column 6</label>
        <%= render partial: 'combo_box', locals: { parameter: :header6 } %>
      </div>
      <div class="col">
        <label for="csvFileInput">Column 7</label>
        <%= render partial: 'combo_box', locals: { parameter: :header7 } %>
      </div>
    </div>
  </div><br>

  <div class="actions">
    <%= form.submit "Import contacts", class:"btn btn-success" %>
  </div>
<% end %>
